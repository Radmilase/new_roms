<mujoco model="hand_only">

    <!-- ================= COMPILER / OPTIONS ================= -->
    <compiler angle="radian"
              coordinate="local"
              meshdir="../stls/hand"
              texturedir="../textures"/>

    <option timestep="0.002" iterations="20">
        <flag warmstart="enable"/>
    </option>

    <!-- ================= SHARED FILES ================= -->
    <include file="shared.xml"/>

    <!-- ================= ASSETS ================= -->
    <asset>
        <include file="shared_asset.xml"/>
    </asset>

    <!-- ================= WORLD ================= -->
    <worldbody>

        <!-- FLOOR -->
        <geom name="floor"
              type="plane"
              pos="0 0 0"
              size="1 1 1"
              condim="3"
              material="floor_mat"/>

        <!-- ROBOT HAND ONLY -->
        <include file="robot.xml"/>

        <!-- LIGHT -->
        <light name="light0"
               directional="true"
               ambient="0.2 0.2 0.2"
               diffuse="0.8 0.8 0.8"
               specular="0.3 0.3 0.3"
               castshadow="false"
               pos="0 1 4"
               dir="0 0 -1"/>

        <!-- CAMERA -->
        <camera
            name="main_camera"
            mode="fixed"
            pos="1 1 1"/>
            <!-- quat="0.707 0 0.707 0" -->
    
    </worldbody>

</mujoco>
